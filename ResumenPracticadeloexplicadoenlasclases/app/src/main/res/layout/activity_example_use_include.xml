<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <include
        android:id="@+id/first_include"
        layout="@layout/layout_user_data"
        app:layout_constraintTop_toTopOf="parent"
        >

    </include>

    <include layout="@layout/layout_materialcardview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/first_include"
        app:layout_constraintStart_toStartOf="@id/first_include"
        app:layout_constraintEnd_toEndOf="@id/first_include"

        android:layout_marginTop="10dp"
        >

    </include>

</androidx.constraintlayout.widget.ConstraintLayout>